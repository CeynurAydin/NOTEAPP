@model NoteApp.Models.Note
@{
    ViewData["Title"] = "AddNote";
}


<form method="post" asp-action="AddNote">
 <div class="container p-3">
    <div class="row pt-4">
        <div class="col-6 ">
            <div class="h4 pb-2 mb-4 text-dark border-bottom border-dark">
                Add Note
            </div>
        </div>
        <div class ="col-6 text-end">
            <input type="submit" class="btn btn-dark" value="Create"/>
        </div>
    </div>
    <div class="row pt-4">
        <div class="form-floating">
            <input asp-for="NoteName" class="form-control border-dark" placeholder="" style="height: 100px"/>
        </div>
            @if (Model.NoteSubId != 0)
            {
                @Html.Hidden("NoteSubId", Model.NoteSubId)
            }
    </div>    
  
  </div>

</form>

